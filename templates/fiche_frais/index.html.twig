{% extends 'base.html.twig' %}

{% block title %}Fiches de Frais{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Fiches de Frais</h1>
        {{ form_start(form) }}
        {{ form_end(form) }}
        <br>
        {% if form.vars.submitted and form.vars.valid %}
            {% if ficheFrais is not empty %}
                <div class="row">
                    {% for fiche in ficheFrais %}
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">{{ fiche.id }}</h5>
                                    <p class="card-text">
                                        Nb Justificatifs : {{ fiche.nbJustificatifs }}<br>
                                        Montant Valid : {{ fiche.montantValid }}<br>
                                        Date Modif : {{ fiche.dateModif|date('d-m-Y') }}<br>
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>Aucune fiche de frais trouv√©e pour ce mois.</p>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}